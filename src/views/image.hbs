<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title"><i class="fas fa-images m-5l"></i>{{image.title}}<i class="fas fa-music m-5l"></i></h2>
        <button class="button" id="btn-delete" data-id="{{image.uniqueId}}">
            <h2 class="card-delete"><i class="fas fa-exclamation-circle"></i> Borrar</h2>
        </button>
    </div>
    <hr>
    <div class="card-body">
        <p class="m-5t f-s-18">{{image.description}}</p>
        <div class="m-a">
            <img src="/public/upload/{{image.fielName}}" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="c-p" id="btn-like" data-id="{{image.uniqueId}}">
            <h2 class="f-s-25"><i class="far fa-heart"></i> Me Gusta</h2>
        </button>
        <p>
            <span class="likes-count f-s-25">{{image.like}}</span>
            <i class="far fa-heart f-s-25 m-3l"></i>
        </p>
        <p>
            <h2>{{image.views}}<i class="fas fa-eye f-s-25 m-3l"></i></h2>
        </p>
        <p>
            <h2>{{timeago image.timeStamp}}<i class="far fa-clock f-s-25 m-3l"></i></h2>
        </p>
    </div>
</div>

<div class="card m-5t">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title f-s-30"><i class="far fa-comments f-s-30"></i>Comentarios</h3>
        <button class="button2" id="btn-toggle-comment">
            <h2 class="card-delete f-s-25"> Publica Un Comentario</h2>
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/image/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Comentario" maxlength="350"></textarea>
                </div>
                <div class="form-group">
                    <button class="button2 b-n">
                        <h2 class="f-s-25 card-delete"><i class="fa fa-comments f-s-25"></i> Publicar</h2>
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
                <li class="list-group-item m-5t">
                    <div class="row">
                        <a href="" class="col align-items-center">
                            <img src="">
                        </a>
                        <blockquote class="col">
                            <p class="lead">{{comment}}</p>
                            <footer class="blockquotes-footer">{{timeago timeStamp}}</footer> <!--Aqui voy a poner el username-->
                        </blockquote>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>